<?xml version="1.0"?>
<robot name="europa_rover">

  <material name="white ">
    <color rgba="1 1 1 1"/>
  </material>

  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>

  <!-- CHASSIS LINK -->
  <link name="chassis">
    <visual>
      <geometry>
        <box size="0.5 0.3 0.1"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.3 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <!-- WHEEL LINKS -->
  <link name="left_rear_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.08" length="0.05"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.08" length="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <link name="right_rear_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.08" length="0.05"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.08" length="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <link name="front_caster">
    <visual>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- JOINT DEFINITIONS -->
  <joint name="chassis_to_left_rear_wheel" type="continuous">
    <parent link="chassis"/>
    <child link="left_rear_wheel"/>
    <origin xyz="-0.15 0.175 0" rpy="1.5707 0 0"/>
    <axis xyz="0 0 -1"/>
  </joint>

  <joint name="chassis_to_right_rear_wheel" type="continuous">
    <parent link="chassis"/>
    <child link="right_rear_wheel"/>
    <origin xyz="-0.15 -0.175 0" rpy="1.5707 0 0"/>
    <axis xyz="0 0 -1"/>
  </joint>

  <joint name="chassis_to_front_caster" type="fixed">
    <parent link="chassis"/>
    <child link="front_caster"/>
    <origin xyz="0.2 0 -0.03"/>
    <axis xyz="0 0 -1"/>
  </joint>


</robot>